# .cmrc defaults file: see README for more details
# color syntax is ANSI:<name>, XTERM256:<name>, RGB:<R>,<G>,<B>
# not all color modes work on all systems - older xterms only support ANSI
# --------------------------------------------------------------------------------

{
    "tabs": 4,
    "jumpscroll": true,
    "showLineNumbers": true,
    "colorizeSyntax": true,
    "liveStatusLines": true,

    "colors": {
        "statusBarTextColor": "ANSI:BRIGHT_WHITE",
        "statusBarBackgroundColor": "ANSI:BLUE",
        "lineNumberTextColor": "ANSI:BRIGHT_BLACK",
        "commandLineMessageTextColor": "ANSI:MAGENTA"
    },

    "syntaxColors": {
        "default": {
            "commentTextColor": "ANSI:WHITE",
            "includeTextColor": "ANSI:MAGENTA",
            "keywordTextColor": "ANSI:BRIGHT_YELLOW",
            "typeTextColor": "ANSI:BRIGHT_BLUE",
            "constantTextColor": "ANSI:BRIGHT_CYAN",
            "methodDefinitionTextColor": "ANSI:MAGENTA",
            "stringTextColor": "ANSI:GREEN"
        },
        "c": {
        },
        "cpp": {
        },
        "swift": {
            "keywordTextColor": "RGB:255,128,128",
            "typeTextColor": "RGB:128,200,255",
            "constantTextColor": "RGB:255,200,100"
        },
        "python": {
        },
        "javascript": {
        },
        "go": {
        },
        "rust": {
        },
        "java": {
        },
        "shell": {
        }
    }
}
